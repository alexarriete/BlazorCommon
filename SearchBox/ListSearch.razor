@inherits ListSearchBase

@if (Elements != null && Elements.Any())
{
    <div class="@DivClass">

        @if (!string.IsNullOrWhiteSpace(Label))
        {
            <label class="control-label">@Label</label>
        }
        <div class="input-group">

            <select @bind="ElementId" class="form-select" id="monthSelectedId">                
                @foreach (Tuple<int,string> element in Elements)
                {
                    if (ElementId == element.Item1)
                    {
                        <option value="@element.Item1" selected> @element.Item2</option>
                    }
                    else
                    {
                        <option value="@element.Item1"> @element.Item2</option>
                    }

                }
            </select>
        </div>
    </div>
}